        // Initialize app
        function initApp() {
            loadStoredContent();
            updateDate();
            displayMessage();
        }

        function loadStoredContent() {
            const storedVerses = localStorage.getItem('customBibleVerses');
            const storedAffirmations = localStorage.getItem('customAffirmations');
            const storedPrayers = localStorage.getItem('customPrayers');

            if (storedVerses) {
                const custom = JSON.parse(storedVerses);
                bibleVerses = [...bibleVerses, ...custom];
            }
            if (storedAffirmations) {
                const custom = JSON.parse(storedAffirmations);
                affirmations = [...affirmations, ...custom];
            }
            if (storedPrayers) {
                const custom = JSON.parse(storedPrayers);
                prayers = [...prayers, ...custom];
            }
        }

        function updateDate() {
            const today = new Date();
            const options = { 
                weekday: 'long', 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
            };
            document.getElementById('currentDate').textContent = today.toLocaleDateString('en-US', options);
        }

        function getCurrentSeason() {
            const month = new Date().getMonth();
            if (month >= 2 && month <= 4) return 'spring';
            if (month >= 5 && month <= 7) return 'summer';
            if (month >= 8 && month <= 10) return 'fall';
            return 'winter';
        }

        function displayMessage() {
            const card = document.getElementById('mainCard');
            const cardType = document.getElementById('cardType');
            const cardIcon = document.getElementById('cardIcon');
            const cardContent = document.getElementById('cardContent');
            const verseReference = document.getElementById('verseReference');
            const themeBadge = document.getElementById('themeBadge');

            card.classList.remove('fade-in');
            setTimeout(() => card.classList.add('fade-in'), 100);

            const messageTypes = ['bible', 'affirmation', 'quote', 'prayer'];
            const randomType = messageTypes[Math.floor(Math.random() * messageTypes.length)];
            
            if (randomType === 'bible') {
                const verse = bibleVerses[Math.floor(Math.random() * bibleVerses.length)];
                cardType.textContent = 'Bible Verse';
                cardIcon.textContent = 'üìñ';
                cardContent.textContent = `"${verse.verse}"`;
                verseReference.textContent = verse.reference;
                verseReference.style.display = 'block';
                
                if (verse.theme) {
                    themeBadge.textContent = verse.theme.charAt(0).toUpperCase() + verse.theme.slice(1);
                    themeBadge.style.display = 'inline-block';
                } else {
                    themeBadge.style.display = 'none';
                }
            } else if (randomType === 'affirmation') {
                const affirmation = affirmations[Math.floor(Math.random() * affirmations.length)];
                cardType.textContent = 'Daily Affirmation';
                cardIcon.textContent = '‚ú®';
                cardContent.textContent = affirmation.text || affirmation;
                verseReference.style.display = 'none';
                themeBadge.style.display = 'none';
            } else if (randomType === 'prayer') {
                const prayer = prayers[Math.floor(Math.random() * prayers.length)];
                cardType.textContent = 'Prayer Prompt';
                cardIcon.textContent = 'üôè';
                cardContent.textContent = prayer;
                verseReference.style.display = 'none';
                themeBadge.style.display = 'none';
            } else {
                const quote = inspirationalQuotes[Math.floor(Math.random() * inspirationalQuotes.length)];
                cardType.textContent = 'Inspiration';
                cardIcon.textContent = 'üåü';
                cardContent.textContent = quote;
                verseReference.style.display = 'none';
                themeBadge.style.display = 'none';
            }
        }

        function getNewMessage() {
            displayMessage();
        }

        function shareMessage() {
            const content = document.getElementById('cardContent').textContent;
            const reference = document.getElementById('verseReference').textContent;
            const shareText = reference ? `${content}\n- ${reference}` : content;
            const fullText = `${shareText}\n\nDaily Grace App - coachrenata.com`;
            
            if (navigator.share) {
                navigator.share({
                    title: 'Daily Grace',
                    text: fullText
                });
            } else {
                navigator.clipboard.writeText(fullText).then(() => {
                    alert('Message copied to clipboard!');
                });
            }
        }

        function showByCategory() {
            // Future feature - browse by theme/category
            alert('Browse by category feature coming soon!');
        }

        // Admin Panel Functions
        function toggleAdmin() {
            const panel = document.getElementById('adminPanel');
            panel.style.display = panel.style.display === 'block' ? 'none' : 'block';
        }

        function addBibleVerse() {
            const verseText = document.getElementById('newVerseText').value.trim();
            const verseRef = document.getElementById('newVerseRef').value.trim();
            const theme = document.getElementById('verseTheme').value;

            if (!verseText || !verseRef) {
                alert('Please fill in both verse text and reference');
                return;
            }

            const newVerse = {
                verse: verseText,
                reference: verseRef,
                theme: theme || null
            };

            bibleVerses.push(newVerse);
            
            // Store in localStorage
            const customVerses = bibleVerses.filter((v, index) => index >= 18); // Original verses are first 18
            localStorage.setItem('customBibleVerses', JSON.stringify(customVerses));

            // Clear form
            document.getElementById('newVerseText').value = '';
            document.getElementById('newVerseRef').value = '';
            document.getElementById('verseTheme').value = '';

            alert('Bible verse added successfully!');
            showContentList();
        }

        function addAffirmation() {
            const affirmationText = document.getElementById('newAffirmation').value.trim();
            const category = document.getElementById('affirmationCategory').value;

            if (!affirmationText) {
                alert('Please enter an affirmation');
                return;
            }

            const newAffirmation = {
                text: affirmationText,
                category: category
            };

            affirmations.push(newAffirmation);
            
            // Store in localStorage
            const customAffirmations = affirmations.filter((a, index) => index >= 20); // Original affirmations are first 20
            localStorage.setItem('customAffirmations', JSON.stringify(customAffirmations));

            // Clear form
            document.getElementById('newAffirmation').value = '';
            document.getElementById('affirmationCategory').value = 'general';

            alert('Affirmation added successfully!');
            showContentList();
        }

        function addPrayer() {
            const prayerText = document.getElementById('newPrayer').value.trim();

            if (!prayerText) {
                alert('Please enter a prayer prompt');
                return;
            }

            prayers.push(prayerText);
            
            // Store in localStorage
            const customPrayers = prayers.filter((p, index) => index >= 10); // Original prayers are first 10
            localStorage.setItem('customPrayers', JSON.stringify(customPrayers));

            // Clear form
            document.getElementById('newPrayer').value = '';

            alert('Prayer prompt added successfully!');
            showContentList();
        }

        function showContentList() {
            const contentType = document.getElementById('contentType').value;
            const contentList = document.getElementById('contentList');
            
            let items = [];
            
            switch(contentType) {
                case 'verses':
                    items = bibleVerses;
                    break;
                case 'affirmations':
                    items = affirmations;
                    break;
                case 'quotes':
                    items = inspirationalQuotes;
                    break;
                case 'prayers':
                    items = prayers;
                    break;
            }

            contentList.innerHTML = '';
            
            items.forEach((item, index) => {
                const div = document.createElement('div');
                div.className = 'content-item';
                
                let displayText = '';
                if (contentType === 'verses') {
                    displayText = `"${item.verse.substring(0, 50)}..." - ${item.reference}`;
                } else if (contentType === 'affirmations') {
                    displayText = (item.text || item).substring(0, 60) + '...';
                } else {
                    displayText = item.substring(0, 60) + '...';
                }
                
                div.innerHTML = `
                    <span>${displayText}</span>
                    <button class="delete-btn" onclick="deleteContent('${contentType}', ${index})">Delete</button>
                `;
                
                contentList.appendChild(div);
            });
        }

        function deleteContent(type, index) {
            if (!confirm('Are you sure you want to delete this item?')) return;
            
            switch(type) {
                case 'verses':
                    bibleVerses.splice(index, 1);
                    const customVerses = bibleVerses.filter((v, i) => i >= 18);
                    localStorage.setItem('customBibleVerses', JSON.stringify(customVerses));
                    break;
                case 'affirmations':
                    affirmations.splice(index, 1);
                    const customAffirmations = affirmations.filter((a, i) => i >= 20);
                    localStorage.setItem('customAffirmations', JSON.stringify(customAffirmations));
                    break;
                case 'prayers':
                    prayers.splice(index, 1);
                    const customPrayers = prayers.filter((p, i) => i >= 10);
                    localStorage.setItem('customPrayers', JSON.stringify(customPrayers));
                    break;
                case 'quotes':
                    inspirationalQuotes.splice(index, 1);
                    break;
            }
            
            showContentList();
            alert('Item deleted successfully!');
        }

        // Service Worker registration for PWA
        if ('serviceWorker' in navigator) {
            navigator.serviceWorker.register('data:text/javascript;base64,').then(function() {
                console.log('Service Worker registered');
            });
        }

        // Initialize when page loads
        window.addEventListener('load', initApp);
    </script>
</body>
</html>
